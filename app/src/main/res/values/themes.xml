<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.RestaurantReservation" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Remove default ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.RestaurantReservation.Button</item>
        <item name="textInputStyle">@style/Widget.RestaurantReservation.TextInputLayout</item>

        <!-- Custom styles -->
        <item name="cardViewStyle">@style/Widget.RestaurantReservation.CardView</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.RestaurantReservation.Button.Outlined</item>
    </style>

    <!-- Main Theme -->
    <style name="Theme.RestaurantReservation" parent="Base.Theme.RestaurantReservation">
    </style>

    <!-- Optional if needed per-activity -->
    <style name="Theme.RestaurantReservation.NoActionBar" parent="Base.Theme.RestaurantReservation">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
