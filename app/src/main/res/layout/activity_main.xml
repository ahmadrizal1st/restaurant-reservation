<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservasi Restoran"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!-- Input Nama dengan TextInputLayout untuk error handling -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nama"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:maxLength="50" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Jumlah Orang -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_jumlah_orang"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <NumberPicker
        android:id="@+id/npJumlahOrang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Tanggal Reservasi -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_pilih_tanggal"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sedang memuat..."
        android:textSize="14sp"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnPilihTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_pilih_tanggal"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Tombol Buat Reservasi -->
    <Button
        android:id="@+id/btnBuatReservasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_buat_reservasi"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Tombol Lihat Daftar -->
    <Button
        android:id="@+id/btnLihatDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_lihat_daftar"
        android:textSize="16sp"
        android:backgroundTint="#4CAF50" />

</LinearLayout>