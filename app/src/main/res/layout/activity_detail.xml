<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Detail Reservasi" />

    <!-- Scroll View untuk konten -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutActions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Reservation Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardReservation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Header dengan ID -->
                    <TextView
                        android:id="@+id/tvReservationId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_reservation_id"
                        android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Nama -->
                    <TextView
                        android:id="@+id/tvLabelNama"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/label_detail_nama"
                        android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvReservationId" />

                    <TextView
                        android:id="@+id/tvNama"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/placeholder_customer_name"
                        android:textAppearance="@style/TextAppearance.RestaurantReservation.Body"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLabelNama" />

                    <!-- Grid untuk detail -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutDetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvNama">

                        <!-- Tanggal -->
                        <TextView
                            android:id="@+id/tvLabelTanggal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/label_detail_tanggal"
                            android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                            android:textColor="@color/text_secondary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvTanggal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/placeholder_date"
                            android:textAppearance="@style/TextAppearance.RestaurantReservation.Body"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvLabelTanggal" />

                        <!-- Waktu -->
                        <TextView
                            android:id="@+id/tvLabelWaktu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/label_waktu"
                            android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                            android:textColor="@color/text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvWaktu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/placeholder_time"
                            android:textAppearance="@style/TextAppearance.RestaurantReservation.Body"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvLabelWaktu" />

                        <!-- Jumlah Orang -->
                        <TextView
                            android:id="@+id/tvLabelJumlah"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/label_detail_jumlah"
                            android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                            android:textColor="@color/text_secondary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvTanggal" />

                        <TextView
                            android:id="@+id/tvJumlahOrang"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/placeholder_people_count"
                            android:textAppearance="@style/TextAppearance.RestaurantReservation.Body"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvLabelJumlah" />

                        <!-- Meja -->
                        <TextView
                            android:id="@+id/tvLabelMeja"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/label_meja_short"
                            android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                            android:textColor="@color/text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvWaktu" />

                        <TextView
                            android:id="@+id/tvMeja"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/placeholder_table"
                            android:textAppearance="@style/TextAppearance.RestaurantReservation.Body"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvLabelMeja" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Status Badge -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layoutDetails">

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:text="@string/status_confirmed_display"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.RestaurantReservation.Body"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <!-- Created At -->
                    <TextView
                        android:id="@+id/tvCreatedAt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/placeholder_created_at"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardStatus" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Vertical Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Action Buttons Grid -->
    <LinearLayout
        android:id="@+id/layoutActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Row 1: Maps & Telepon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBukaMaps"
                style="@style/Widget.RestaurantReservation.Button.Outlined"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/btn_maps"
                android:maxLines="1"
                android:ellipsize="end"
                app:icon="@drawable/ic_map" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTeleponRestoran"
                style="@style/Widget.RestaurantReservation.Button.Outlined"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_telepon"
                android:maxLines="1"
                android:ellipsize="end"
                app:icon="@drawable/ic_phone" />

        </LinearLayout>

        <!-- Row 2: Website & Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBukaWebsite"
                style="@style/Widget.RestaurantReservation.Button.Outlined"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/btn_website"
                android:maxLines="1"
                android:ellipsize="end"
                app:icon="@drawable/ic_website" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKirimEmail"
                style="@style/Widget.RestaurantReservation.Button.Outlined"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_email"
                android:maxLines="1"
                android:ellipsize="end"
                app:icon="@drawable/ic_email" />

        </LinearLayout>

        <!-- Row 3: Share & Edit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBagikanReservasi"
                style="@style/Widget.RestaurantReservation.Button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/btn_bagikan"
                android:maxLines="1"
                android:ellipsize="end"
                app:icon="@drawable/ic_share" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditReservasi"
                style="@style/Widget.RestaurantReservation.Button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_edit_short"
                android:maxLines="1"
                android:ellipsize="end"
                app:icon="@drawable/ic_edit" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
