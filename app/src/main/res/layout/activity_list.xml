<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Reservasi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!-- Placeholder untuk daftar reservasi -->
    <TextView
        android:id="@+id/tvEmptyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_list"
        android:textSize="16sp"
        android:textColor="#666"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Area untuk RecyclerView (akan diimplementasi nanti) -->
    <LinearLayout
        android:id="@+id/containerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <!-- RecyclerView akan ditambahkan di sini -->

    </LinearLayout>

    <!-- Tombol Tambah Reservasi -->
    <Button
        android:id="@+id/btnTambahReservasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_tambah_reservasi"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Tombol Kembali ke Utama -->
    <Button
        android:id="@+id/btnKembaliKeUtama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_kembali_ke_utama"
        android:textSize="16sp"
        android:backgroundTint="#9E9E9E" />

</LinearLayout>