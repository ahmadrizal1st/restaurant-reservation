<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardReservation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nama dan Action Buttons -->
        <TextView
            android:id="@+id/tvItemNama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_customer_name"
            android:textAppearance="@style/TextAppearance.RestaurantReservation.Body"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/layoutActions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_share"
                android:contentDescription="@string/share"
                android:layout_marginEnd="4dp"
                android:padding="8dp"
                app:tint="@color/text_secondary" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:contentDescription="@string/edit"
                android:layout_marginEnd="4dp"
                android:padding="8dp"
                app:tint="@color/text_secondary" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/delete"
                android:padding="8dp"
                app:tint="@color/error_color" />

        </LinearLayout>

        <!-- Reservation ID -->
        <TextView
            android:id="@+id/tvItemReservationId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/placeholder_reservation_id"
            android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
            android:textColor="@color/text_secondary"
            app:layout_constraintEnd_toStartOf="@+id/layoutActions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvItemNama" />

        <!-- Detail Grid -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvItemReservationId">

            <!-- Tanggal -->
            <TextView
                android:id="@+id/tvLabelTanggal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                android:textColor="@color/text_secondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvItemTanggal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/placeholder_date"
                android:textAppearance="@style/TextAppearance.RestaurantReservation.Body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelTanggal" />

            <!-- Waktu -->
            <TextView
                android:id="@+id/tvLabelWaktu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                android:textColor="@color/text_secondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvItemWaktu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/placeholder_time"
                android:textAppearance="@style/TextAppearance.RestaurantReservation.Body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelWaktu" />

            <!-- Jumlah Orang -->
            <TextView
                android:id="@+id/tvLabelJumlah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/people"
                android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                android:textColor="@color/text_secondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvItemTanggal" />

            <TextView
                android:id="@+id/tvItemJumlahOrang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/placeholder_people_count"
                android:textAppearance="@style/TextAppearance.RestaurantReservation.Body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelJumlah" />

            <!-- Meja -->
            <TextView
                android:id="@+id/tvLabelMeja"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/table"
                android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                android:textColor="@color/text_secondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvItemWaktu" />

            <TextView
                android:id="@+id/tvItemMeja"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/placeholder_table"
                android:textAppearance="@style/TextAppearance.RestaurantReservation.Body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelMeja" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Status Badge -->
        <LinearLayout
            android:id="@+id/layoutStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutDetails">

            <TextView
                android:id="@+id/tvItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp"
                android:text="@string/status_confirmed_display"
                android:textAppearance="@style/TextAppearance.RestaurantReservation.Caption"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="true" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>