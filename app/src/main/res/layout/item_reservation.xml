<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardReservation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header dengan nama dan action buttons -->
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12px">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItemNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pemesan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/tvItemReservationId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: RES_123456"
                    android:textSize="10sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="2dp"
                    tools:text="ID: RES_123456" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_share"
                    android:contentDescription="@string/share"
                    android:layout_marginEnd="4dp" />

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="@string/edit"
                    android:layout_marginEnd="4dp" />

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="@string/delete"
                    android:tint="@color/error_color" />

            </LinearLayout>

        </LinearLayout>

        <!-- Detail Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Tanggal dan Waktu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/date"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvItemTanggal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="01/01/2024"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:textAlignment="textEnd"
                    tools:text="Senin, 01 Januari 2024" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/time"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvItemWaktu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12:00"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:textAlignment="textEnd"
                    tools:text="19:30" />

            </LinearLayout>

            <!-- Jumlah Orang dan Meja -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/people"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvItemJumlahOrang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 orang"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:textAlignment="textEnd"
                    tools:text="4 orang" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/table"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvItemMeja"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Meja 1"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:textAlignment="textEnd"
                    tools:text="Meja VIP 2" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Badge -->
        <LinearLayout
            android:id="@+id/layoutStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_status_badge"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                tools:text="CONFIRMED" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>